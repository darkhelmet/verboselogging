        {{if .NotFound}}{{template "not_found.tmpl"}}{{end}}
        {{if .Error}}{{template "server_error.tmpl"}}{{end}}
      </section>
      <footer>
        {{template "footer.tmpl" .}}
      </footer>
    </div>
