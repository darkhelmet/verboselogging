<article class="preview main">
    <h2 class="entry-title">
        <a href="{{.Canonical | CanonicalUrl}}" rel="bookmark">{{.Title}}</a>
    </h2>
    <div class="meta">
        <time datetime="{{.PublishedOn | ISO8601}}">{{.PublishedOn | InTimeZone | DisplayTime}}</time>
        &middot;
        Posted in
        <span class="category">
            <a href="{{CategoryPath . | CanonicalUrl}}">{{.Category | Titleize}}</a>
        </span>
    </div>
    <div class="snippet">{{.BodyTruncated | Safe}}</div>
    <div class="extra_links">
        <a href="{{.Canonical | CanonicalUrl}}" class="read_more fleft">Keep Reading</a>
    </div>
</article>
