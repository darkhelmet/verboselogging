{{range $category, $posts  := .}}
    <section>
        <h1><a href="{{CategoryPath $category}}">{{$category}}</a></h1>
        {{range $posts}}
            <article class="main">
                <h4 class="archive_title">
                    <a href="{{.Canonical | CanonicalUrl}}" rel="bookmark">{{.Title}}</a>
                </h4>
            </article>
        {{end}}
    </section>
{{end}}
