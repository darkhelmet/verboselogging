<article class="post hentry">
    <h1 class="entry-title">
        <a href="{{.Canonical | CanonicalUrl}}" rel="bookmark">{{.Title}}</a>
    </h1>
    <div class="meta">
        <time class="updated" datetime="{{.PublishedOn | ISO8601}}" style="display: none"></time>
        <time datetime="{{.PublishedOn | ISO8601}}">{{.PublishedOn | InTimeZone | DisplayTime}}</time>
        &middot;
        <span class="byline author vcard">
            By
            <span class="fn">{{.Author}}</span>
        </span>
        &middot;
        Posted in
        <span class="category">
            <a href="{{CategoryPath . | CanonicalUrl}}">{{.Category | Titleize}}</a>
        </span>
        &middot;
        Tagged with
        <span class="tags">
            {{range .Tags}}
                <a href="{{TagPath . | CanonicalUrl}}" rel="tag">{{.}}</a>
            {{end}}
        </span>
    </div>
    <hr>
    <div class="content entry-content">{{.BodyHtml | Safe}}</div>
    <div class="clear"></div>
    {{template "sharing.tmpl"}}
    <hr>
    <h5>If you liked this post, you might like these:</h5>
    <ul>
        {{range .Related}}
        <li>
            <a href="{{.Canonical | CanonicalUrl}}">{{.Title}}</a>
        </li>
        {{end}}
    </ul>
</article>
