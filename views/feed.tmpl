<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{.SiteTitle}}</title>
        <link>{{CanonicalUrl "/"}}</link>
        <description>{{.SiteDescription}}</description>
        <language>en-us</language>
        <managingEditor>{{.SiteContact}} ({{.SiteAuthor}})</managingEditor>
        <webMaster>{{.SiteContact}} ({{.SiteAuthor}})</webMaster>
        <lastBuildDate>{{with $post := index .Post 0}}{{.PublishedOn | InTimeZone | RFC822 }}{{end}}</lastBuildDate>
        {{range .Post}}
            <item>
                <title>{{.Title}}</title>
                <category>{{.Category | Titleize}}</category>
                <pubDate>{{.PublishedOn | InTimeZone | RFC822 }}</pubDate>
                <link>{{.Canonical | CanonicalUrl}}</link>
                <guid>{{.Canonical | CanonicalUrl}}</guid>
                <author>{{.FeedAuthor}}</author>
                <description>
                    <![CDATA[{{.BodyHtml | Safe }}]]>
                </description>
            </item>
        {{end}}
    </channel>
</rss>
